{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "src/**/*.json"
      }
    ],
    "watchIgnore": [
      "**/*.ignore",
      "**/.git/**",
      "**/node_modules/**",
      "**/data.db",
      "**/data.db-wal",
      "**/data.db-shm",
      "**/data.db-journal",
      "**/output/**",
      "**/test-scripts/**"
    ]
  }
}
